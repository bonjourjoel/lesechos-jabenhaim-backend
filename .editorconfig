# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Match specific files (optional)
[*.md]
trim_trailing_whitespace = false  # For markdown files, preserve trailing whitespace

[*.json]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2
